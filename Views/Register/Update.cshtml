@model RegisterModel

<h2>Edit User</h2>

<form method="post" action="/User/Update">
    <input type="hidden" name="UserId" value="@Model.UserId" />

    <div class="form-group">
        <label>First Name</label>
        <input type="text" name="firstName" class="form-control" value="@Model.firstName" required />
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <input type="text" name="lastName" class="form-control" value="@Model.lastName" required />
    </div>

    <div class="form-group">
        <label>Date of Birth</label>
        <input type="date" name="DOB" class="form-control" value="@Model.DOB.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-group">
        <label>Gender</label>
        <select id="Gender" class="form-control">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
    </div>

    <div class="form-group">
        <label>Phone</label>
        <input type="text" name="phoneNumber" class="form-control" value="@Model.phoneNumber" required />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" name="emailAddress" class="form-control" value="@Model.emailAddress" required />
    </div>

    <div class="form-group">
        <label>Address</label>
        <input type="text" name="address" class="form-control" value="@Model.address" required />
    </div>

    <div class="form-group">
        <label>State</label>
        <input type="text" name="state" class="form-control" value="@Model.state" required />
    </div>

    <div class="form-group">
        <label>City</label>
        <input type="text" name="city" class="form-control" value="@Model.city" required />
    </div>

    <div class="form-group">
        <label>Username</label>
        <input type="text" name="userName" class="form-control" value="@Model.userName" required />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a href="/User/Index" class="btn btn-secondary">Cancel</a>
</form>
