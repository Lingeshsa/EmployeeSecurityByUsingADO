@model List<EmployeeSecurityByUsingADO.Models.RegisterModel>

    

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Users</h2>
    <a href="@Url.Action("Index", "Register")" class="btn btn-success btn-sm">Add User</a>
</div>



@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <p style="color: red;">@ViewBag.Message</p>
}

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>State</th>
                <th>City</th>
                <th>Username</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.firstName</td>
                    <td>@user.lastName</td>
                    <td>@user.DOB.ToString("yyyy-MM-dd")</td>
                    <td>@user.Gender</td>
                    <td>@user.phoneNumber</td>
                    <td>@user.emailAddress</td>
                    <td>@user.address</td>
                    <td>@user.state</td>
                    <td>@user.city</td>
                    <td>@user.userName</td>
                    <td>

                        <a href="@Url.Action("Edit", "Register", new { id = user.UserId })" class="btn btn-primary btn-sm">Edit</a>
                        <button class="btn btn-danger btn-sm delete-user" data-id="@user.UserId">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}


<script>
        $(document).ready(function () {
        $(".delete-user").click(function (event) {
            event.preventDefault();
            var userId = $(this).data("id");

            if (!confirm("Are you sure you want to delete this user?")) {
                return;
            }

            $.ajax({
                url: "/Register/Delete",
                type: "POST",
                data: { id: userId },
                success: function (response) {
                    alert(response.message);
                    location.reload();
                },
                error: function (xhr) {
                    alert("Failed to delete user. Error: " + xhr.responseText);
                }
            });
        });
    });

</script>
